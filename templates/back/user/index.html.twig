{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateNaissance</th>
                <th>Sexe</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>UrgNom</th>
                <th>UrgPrenom</th>
                <th>UrgNumero</th>
                <th>CertifMedical</th>
                <th>LicencePaid</th>
                <th>CoursPaid</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.uuid }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.urgNom }}</td>
                <td>{{ user.urgPrenom }}</td>
                <td>{{ user.urgNumero }}</td>
                <td>{{ user.certifMedical ? 'Yes' : 'No' }}</td>
                <td>{{ user.licencePaid ? 'Yes' : 'No' }}</td>
                <td>{{ user.coursPaid ? 'Yes' : 'No' }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_b_a_c_k_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_b_a_c_k_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_b_a_c_k_user_new') }}">Create new</a>
{% endblock %}

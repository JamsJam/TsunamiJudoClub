            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sexe }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>UrgNom</th>
                <td>{{ user.urgNom }}</td>
            </tr>
            <tr>
                <th>UrgPrenom</th>
                <td>{{ user.urgPrenom }}</td>
            </tr>
            <tr>
                <th>UrgNumero</th>
                <td>{{ user.urgNumero }}</td>
            </tr>
            <tr>
                <th>CertifMedical</th>
                <td>{{ user.certifMedical ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LicencePaid</th>
                <td>{{ user.licencePaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CoursPaid</th>
                <td>{{ user.coursPaid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_index') }}">back to list</a>

